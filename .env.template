# ===============================
# Application Configuration
# ===============================
# The port on which the application will run
APP_PORT=8000

# Timezone setting for the application
TZ=Europe/Berlin

# ===============================
# PostgreSQL Configuration
# ===============================
# Host address of the PostgreSQL server
POSTGRES_HOST=postgres

# Port on which PostgreSQL is running
POSTGRES_PORT=5432

# Name of the PostgreSQL database
POSTGRES_DB=meal_mentor

# PostgreSQL username
POSTGRES_USER=your_username

# PostgreSQL password
POSTGRES_PASSWORD=your_password

# ===============================
# Grafana Configuration
# ===============================
# Admin username for Grafana
GRAFANA_ADMIN_USER=admin

# Admin password for Grafana
GRAFANA_ADMIN_PASSWORD=admin

# Secret key for Grafana (use a strong, unique value)
GRAFANA_SECRET_KEY=YOUR_GRAFANA_SECRET_KEY

# ===============================
# OpenAI API Configuration
# ===============================
# Your OpenAI API key
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
